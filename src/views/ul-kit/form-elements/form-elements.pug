<!DOCTYPE html>
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title Form elements
    body
      include /units/header-ul-kit/header-ul-kit.pug
      include form-elements__components.pug

      +header-ul-kit()

      .content__form-elements
        .collumn-one
          .element-width_320
            +text-field({
              title: 'text field',
              titleSub: 'default',
              placeholder: 'Email'
            })
          .element-width_320
            +text-field({
              title: 'text field',
              titleSub: 'hover / focus',
              placeholder: 'This is pretty awesome',
              focus: true
            })
          .element-width_320
            +dropdown({
              id: 'propsRoom',
              type: 'props',
              title: 'dropdown',
              titleSub: 'default',
              props: [
                {id: 'propsRoomBedrooms', title: 'Спальни'},
                {id: 'propsRoomBeds', title: 'Кровати'},
                {id: 'propsRoomBathrooms', title: 'Ванные комнаты'},
              ]
            })
          .element-width_150
            +dropdown({
              id: 'entryDate',
              type: 'date',
              title: 'date dropdown',
              titleSub: '',
            })

        .collumn-two
          123
        .collumn-three
          .element-width_266
            +slider-bar({ 
              id: 'sumSlider',
              title: 'range slider',
              type: 'range'
            })