<!DOCTYPE html>
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title Form elements
    body
      include /units/header-ul-kit/header-ul-kit.pug
      include form-elements__components.pug

      +header-ul-kit()

      .content__form-elements
        .collumn-one
          .element-width_320
            +text-field({
              title: 'text field',
              titleSub: 'default',
              placeholder: 'Email'
            })
          .element-width_320
            +text-field({
              title: 'text field',
              titleSub: 'hover / focus',
              placeholder: 'This is pretty awesome',
              focus: true
            })
          .element-group-line(class= 'element-group-line_320')
            .element-width_150
              +dropdown({
                id: 'entryDate',
                type: 'date',
                title: 'date dropdown',
                titleSub: '',
              })
            .element-width_150
              +dropdown({
                id: 'outDate',
                type: 'date',
                title: 'date dropdown',
                titleSub: '',
              })
          .element-width_266
            +dropdown({
                id: 'rangeDate',
                type: 'date',
                title: 'filter date dropdown',
                titleSub: '',
              })
          .element-width_266
            +dropdown({
              id: 'propsRoom',
              type: 'props',
              title: 'dropdown',
              titleSub: 'default',
              props: [
                {id: 'propsRoomBedrooms', title: 'Спальни'},
                {id: 'propsRoomBeds', title: 'Кровати'},
                {id: 'propsRoomBathrooms', title: 'Ванные комнаты'},
              ]
            })
          

        .collumn-two
          .element-width_260
            +toggle({id: 'specOffer', text: 'Получать спецпредложения', title: 'toggle', isChecked: true})
            +toggle({id: 'specOffer-sec', text: 'Получать спецпредложения'})
        .collumn-three
          .element-width_266
            +slider-bar({ 
              id: 'sumSlider',
              title: 'range slider',
              type: 'range'
            })

          .element-group-line(class= 'element-group-line_220')
            .element-width_100
              +button-box({
                id: 'btn1',
                title:'click me',
                hover: false,
                fill: true,
                arrow: false
              })
            .element-width_100
              +button-box({
                id: 'btn2',
                title:'click me',
                hover: true,
                fill: true,
                arrow: false
              })
          .element-group-line(class= 'element-group-line_220')
            .element-width_100
              +button-box({
                id: 'btn1',
                title:'click me',
                hover: false,
                fill: false,
                arrow: false
              })
            .element-width_100
              +button-box({
                id: 'btn2',
                title:'click me',
                hover: true,
                fill: false,
                arrow: false
              })